# This is Git's per-user configuration file.
[user]
    name = takuma.saito
    email = {{ onepasswordRead "op://Personal/GITHUB_EMAIL/email" }}

[push]
    default = current
    autoSetupRemote = true

[init]
    defaultBranch = main

[url "git@github.com:"]
    nsteadOf = https://github.com/

[secrets]
    providers = git secrets --aws-provider
    patterns = (A3T[A-Z0-9]|AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}
    patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
    patterns = (\"|')?(AWS|aws|Aws)?_?(ACCOUNT|account|Account)_?(ID|id|Id)?(\"|')?\\s*(:|=>|=)\\s*(\"|')?[0-9]{4}\\-?[0-9]{4}\\-?[0-9]{4}(\"|')?

[merge]
    tool = nvimdiff3

[checkout]
    defaultRemote = origin

[include]
    path = .gitconfig.local.sign

[alias]
    default-branch = "!basename $(git symbolic-ref refs/remotes/origin/HEAD --short | tr -d '\n')"
    restore-origin = "!git fetch --all && git stash && git restore . && git switch -C $(basename $(git rev-parse --abbrev-ref @{u})) $(git rev-parse @{u})"
    log-short = "!git --no-pager log -30 --oneline"
    graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[pager]
    branch = less -F -X
    log = less -F -X
