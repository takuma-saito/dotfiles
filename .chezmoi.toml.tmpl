{{- $personal := true }}
{{- if .chezmoi.hostname | regexMatch "^PT" -}}
{{-     $personal = false -}}
{{- end -}}
[merge]
    command = "nvim"
    args = ["-d", "{{`{{ .Destination }}`}}", "{{`{{ .Source }}`}}", "{{`{{ .Target }}`}}"]
[edit]
    apply = true
[git]
    autoAdd = true
[data]
    personal = {{ $personal }}
[scriptEnv]
    IS_PERSONAL = "{{ $personal }}"
